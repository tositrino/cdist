#
# Manage packages on Debian and co.
#

instopt="--allow-downgrades --allow-remove-essential --allow-change-held-packages"
remopt=""

if [ -f "$__object/parameter/name" ]; then
  name="$(cat "$__object/parameter/name")"
else
  name="$__object_id"
fi

if [ -f "$__object/parameter/unauthenticated" ]; then
  instopt="${instopt} --allow-unauthenticated"
fi

if [ -z "${name}" ] ; then
  echo "WARNING: no package name defined , ignoring (args=\"$@\")"
  exit 0
fi

if [ -f "$__object/parameter/state" ]; then
   state_should="$(cat "$__object/parameter/state")"
else
   state_should="present"
fi

# FIXME: use grep directly, state is a list, not a line!
state_is="$(cat "$__object/explorer/state")"
case "$state_is" in
    present*)
       name="$(echo "$state_is" | cut -d ' ' -f 2)"
       state_is="present"
    ;;
esac

# Hint if we need to avoid questions at some point:
# DEBIAN_PRIORITY=critical can reduce the number of questions
aptget="DEBIAN_FRONTEND=noninteractive apt-get --quiet --yes --no-install-recommends \
        -o DPkg::Options::=\"--force-confold\" \
        -o DPkg::Options::=\"--force-depends\""

[ "$state_is" = "$state_should" ] && exit 0

case "$state_should" in
  present)
    printf "%s install %s \"%s\"\n" "${aptget}" "${instopt}" "${name}" 2>&1 || printf "ERROR:%s install %s \"%s\" failed\n" "${aptget}" "${instopt}" "${name}"
    ## echo $aptget install --allow-downgrades --allow-remove-essential --allow-change-held-packages \"$name\" 2>&1 || echo "ERROR
  ;;
  absent)
    printf "%s remove %s \"%s\"\n" "${aptget}" "${remopt}" "${name}" 2>&1 || printf "ERROR:%s remove %s \"%s\" failed\n" "${aptget}" "${remopt}" "${name}"
    ##echo $aptget remove ${remopt} \"$name\"
  ;;
  *)
    echo "Unknown state: $state_should" >&2
    exit 1
  ;;
esac
