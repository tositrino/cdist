name="$__object_id"
os=$(cat "$__global/explorer/os")
osv=$(cat "$__global/explorer/os_version" | tr -d '.' )

rq="__package/python-software-properties"
__package python-software-properties --state present

if [ ${os} = "ubuntu" ] && [ ${osv} -ge 1404 ] ; then
  __package software-properties-common
  rq="${rq} __package/software-properties-common"
fi

require="${rq}" \
   __file /usr/local/bin/remove-apt-repository \
   --source "$__type/files/remove-apt-repository" \
   --mode 0755

require="$__object_name" __apt_update_index
