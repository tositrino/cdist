# This type allows to configure the desired localtime timezone.

timezone="$__object_id"
os=$(cat "$__global/explorer/os")

case "$os" in
   debian|linaro|ubuntu)
      echo "echo \"$timezone\" > /etc/timezone"
   ;;
esac
