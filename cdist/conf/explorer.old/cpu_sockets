# FIXME: other system types (not linux ...)

if [ -r /proc/cpuinfo ]; then
    sockets="$(cat /proc/cpuinfo | grep "physical id" | sort | uniq | wc -l)"
    if [ ${sockets} -eq 0 ]; then
        sockets="$(cat /proc/cpuinfo | grep "processor" | wc -l)"
    fi
    echo "${sockets}"
fi
